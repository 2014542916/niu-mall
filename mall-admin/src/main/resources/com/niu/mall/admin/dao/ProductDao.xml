<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niu.mall.admin.dao.ProductDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.niu.mall.mbg.domain.ProductDomain">
        <id column="product_id" property="productId" />
        <result column="product_name" property="productName" />
        <result column="product_colour" property="productColour" />
        <result column="product_company" property="productCompany" />
        <result column="product_type" property="productType" />
        <result column="product_price" property="productPrice" />
        <result column="product_sales_volume" property="productSalesVolume" />
        <result column="product_stock" property="productStock" />
    </resultMap>
    <insert id="createProduct" parameterType="com.niu.mall.mbg.domain.ProductDomain" useGeneratedKeys ="true" keyProperty = "productId" >
        INSERT INTO `product`( `product_name`, `product_colour`,`product_company`, `product_type`,
                               `product_price`,`product_sales_volume`,`product_stock`)
        VALUES (#{productName},#{productColour},#{productCompany},#{productType},#{productPrice},#{productSalesVolume},#{productStock});

    </insert>
    <update id="update" parameterType="com.niu.mall.mbg.domain.ProductDomain">
        update `product`
        <set>
            <if test="productName !=null">
                `product_name`=#{productName},
            </if>
            <if test="productColour !=null">
                `product_colour`=#{productColour},
            </if>
            <if test="productCompany !=null">
                `product_company`=#{productCompany},
            </if>
            <if test="productType !=null">
                `product_type`=#{productType},
            </if>
            <if test="productPrice !=null">
                `product_price`=#{productPrice},
            </if>
            <if test="productSalesVolume !=null">
                `product_sales_volume`=#{productSalesVolume},
            </if>
            <if test="productStock !=null">
                `product_stock`=#{productStock},
            </if>
        </set>
        where `product_id` = #{productId}
    </update>
    <select id="findById"  resultMap="BaseResultMap" parameterType="long">
        select * from `product` where product_id=#{productId};
    </select>

</mapper>
