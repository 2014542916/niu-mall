<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niu.mall.admin.dao.UmsRoleDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.niu.mall.mbg.po.UmsRolePo">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="admin_count" property="adminCount" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
    </resultMap>
    <select id="getMenuList" resultType="com.niu.mall.mbg.po.UmsMenuPo">
        SELECT
            m.id id,
            m.parent_id parentId,
            m.create_time createTime,
            m.title title,
            m.level LEVEL,
            m.sort sort,
            m.name NAME,
            m.icon icon,
            m.hidden hidden
        FROM
            `ums_admin_role_relation` arr
                JOIN  `ums_role` r ON arr.`role_id`=r.`id`
                JOIN	`ums_role_menu_relation` rmr ON rmr.`role_id`=r.`id`
                JOIN `ums_menu` m ON rmr.`menu_id` = m.`id`
        WHERE arr.`admin_id`=1
          AND
            m.`id` IS NOT NULL
        GROUP BY
            m.`id`
    </select>

</mapper>
